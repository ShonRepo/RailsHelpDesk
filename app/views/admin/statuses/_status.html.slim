tr
  td= status.id
  td= status.name
  td
    .btn-group role="group"
      = link_to [ :edit, :admin, status ], class: 'btn btn-outline-primary btn-sm'
        = octicon "pencil", :height => 32,  :class => "right left", :"aria-label" => "hi"

      = link_to  [ :admin, status ], class: 'btn btn-outline-danger btn-sm',data: {confirm: "хотите удалить '#{status.name}'"}, method: :delete
        = octicon "trashcan", :height => 32,  :class => "right left", :"aria-label" => "hi"
