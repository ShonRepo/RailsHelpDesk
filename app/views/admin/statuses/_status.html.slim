tr
  td= status.id
  td= status.name
  td
    .btn-group role="group"
      = link_to [ :edit, :admin, status ], class: 'btn btn-outline-primary btn-sm tag-tooltip',
                      :data => {:toggle=>"tooltip"},
                      'data-original-title' => I18n.t('status.update'),
                      'data-placement' => 'bottom'
        = octicon "pencil", :height => 32,  :class => "right left", :"aria-label" => "hi"

      = link_to  [ :admin, status ], class: 'btn btn-outline-danger btn-sm tag-tooltip',data: {confirm: "хотите удалить '#{status.name}'", :toggle=>"tooltip"},
      'data-original-title' => I18n.t('status.delete'),
      'data-placement' => 'bottom', method: :delete
        = octicon "trash", :height => 32,  :class => "right left", :"aria-label" => "hi"
